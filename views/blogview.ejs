<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/head-scripts.ejs') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
      body {
        background-color: #f5efe6;
      }
      body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/images/blogentry.svg') no-repeat;
        background-size: cover;
        background-position: center 33%;
        opacity: 0.20; /* Adjust the value as needed */
        z-index: -1; /* Ensure it stays behind other content */
      }
      .blog-title {
        font-size: 2rem;
        font-weight: bold;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      .blog-content {
        margin-top: 2rem;
        background-color: transparent;
        border: none;
      }
    </style>
  </head>

  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container align-content-center justify-content-center mt-5" style="max-width: 1000px;">
      <div class="text-center blog-title"><%= blogTitle %></div>
      <div class="text-center blog-user"><%= blogUserName %></div>

      <div id="editor" class="blog-content"></div>
    </div>

    <%- include('./partials/footer.ejs') %>
    <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
    <script>
      const blogEntry = "<%-blogContent%>";

      var quill = new Quill('#editor', {
        theme: 'snow',
        readOnly: true,
        modules: {
          toolbar: false
        }
      });

      quill.pasteHTML(blogEntry);

    </script>
    <%- include('./partials/body-script.ejs') %>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
