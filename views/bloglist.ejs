<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/head-scripts.ejs') %>
    <style>
      body {
        position: relative; /* Ensure layering works properly */
      }
      .blog-background {
          position: fixed;
          top: 0;
          left: 0;
          width: 100vw;
          height: 100vh;
          background-image: url("/images/blog/backgrounds/default.svg");
          background-size: cover;
          background-repeat: no-repeat;
          background-position: center center;
          opacity: 0.05;
      }
    </style>
  </head>

  <body>
    <div id="blog-background" class="blog-background"></div>    
    <%- include('./partials/nav.ejs')  %>
    <div class="container justify-content-center" style="position:relative;">
      <div class="row justify-content-center">
        <div class="fs-1 text-center text-dkgray text-shadow-black">
          User Blogs
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <ul class="list-group mx-auto justify-content-center">
          <%blogList.forEach(function(blog, i, arr){-%>
          <li class="border-bottom border-primary border-1">
            <a class="fs-3 text-shadow-black no-href-decoration" href="<%=blog.viewurl%>"><%=blog.title%></a><span class="tab-space"></span>
            <a class="fs-5 text-shadow-blue no-underline" href="<%=blog.viewurl%>"> - <%=blog.username%></a><span class="tab-space"></span>
          </li>
          <%});-%>
        </ul>
      </div>
    </div>

    <%- include('./partials/body-script.ejs') %>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>