<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/head-scripts.ejs') %>
    <style>
      body::before {
          content: "";
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          z-index: -1; /* Ensure it stays behind other content */
          background: url('/images/blogentry.svg') no-repeat;
          background-size: cover;
          background-position: center 33%;
          opacity: 0.20;
      }
    </style>
  </head>

  <body>
    <%- include('./partials/nav.ejs')  %>
    <div class="container justify-content-center">
      <div class="row justify-content-center">
        <div class="fs-1 text-center text-dkgray text-shadow-black">
          User Blogs
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <ul class="list-group mx-auto justify-content-center">
          <%blogList.forEach(function(blog, i, arr){-%>
          <li class="border-bottom border-primary border-1">
            <a class="fs-3 text-shadow-black no-href-decoration" href="<%=blog.viewurl%>"><%=blog.title%></a><span class="tab-space"></span>
            <a class="fs-5 text-shadow-blue no-underline" href="<%=blog.viewurl%>"> - <%=blog.username%></a><span class="tab-space"></span>
          </li>
          <%});-%>
        </ul>
      </div>
    </div>

    <%- include('./partials/body-script.ejs') %>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>