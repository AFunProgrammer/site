<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/head-scripts.ejs') %>
  </head>

  <body>
    <%- include('./partials/nav.ejs')  %>
    <div class="container justify-content-center">
      <div class="row justify-content-center">
        <div class="fs-1 text-center text-dkgray text-shadow-black">
          User Blogs
        </div>
      </div>
      <div class="d-flex justify-content-center">
        <ul class="list-group mx-auto justify-content-center">
          <%gameData.forEach(function(entry, i, arr){-%>
          <li class="border-bottom border-primary border-1">
            <a class="fs-4 text-shadow-black no-href-decoration" href="<%=entry['blogUrl']%>"><%=entry['blogUser']%></a><span class="tab-space"></span>
            <a class="fs-5 text-shadow-blue no-underline" href="<%=entry['blogUrl']%>">Read</a><span class="tab-space"></span>
          </li>
          <%});-%>
        </ul>
      </div>
    </div>

    <%- include('./partials/body-script.ejs') %>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>